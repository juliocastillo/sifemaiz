{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/jquery.dataTables.min.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/jquery.dataTables.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#mytable').DataTable({paging: false, scrollY: 225, searching: true, ordering: false, select: false});
        });
    </script>

    {% endblock %} {% block body %} {{ parent() }} <div class="panel panel-primary box box-info center-block" style="width: 650px;">
    <div class="panel-heading box-header with-border">
        <text class="box-title">&nbsp&nbsp<span class="glyphicon glyphicon-folder-open"></span>
            Abrir empresa</text>
    </div>
    <form action="" class="form-horizontal" method="post">
        <div class="panel-body box-body">
            <table id="mytable" class="demo compac" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% set i = 1 %}
                    {% for empresa in empresas %}
                        <tr >
                            <td style="padding:2px;">{{ i }}</td>
                            <td style="padding:2px;">{{ empresa.nombre }}</td>
                            <td style="padding:2px;">
                                <a href="{{ path('conta_empresa_open', {'empresaId': empresa.id }) }}" class="btn btn-success">Abrir</a>
                            </td>
                        </tr>
                        {% set i = i + 1 %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</form>
{% endblock %}
